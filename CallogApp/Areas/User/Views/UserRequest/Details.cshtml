@model CallogApp.Models.Request

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row">

    <div class="col-md-3"></div>
    <div class="col-md-6 polaroid">

        <div class="w3l-table-info">
            <div class="message">@ViewBag.Message</div>
            <div class="agile-tables">
                <h4 class="text-dark text-uppercase"> Request Details</h4>
               
                

                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DepartmentId" class="control-label"></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="IssueId" class="control-label"></label>
                            <select asp-for="IssueId" class="form-control" asp-items="ViewBag.IssueId"></select>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DeviceId" class="control-label"></label>
                            <select asp-for="DeviceId" class="form-control" asp-items="ViewBag.DeviceId"></select>
                        </div>
                        <div class="form-group col-md-6">
                     
                        </div>

                    </div>

                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-block btn-primary text-white" />
                    </div>
               
            </div>
        </div>

    </div>
    <div class="col-md-3">

        <a asp-action="Index">Back to List</a>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
