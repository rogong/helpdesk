@model CallogApp.Models.Request

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">

    <div class="col-md-3"></div>
    <div class="col-md-6 polaroid">

        <div class="w3l-table-info">
            <div class="message">@ViewBag.Message</div>
            <div class="agile-tables">
                <h4 class="text-dark text-uppercase">Edit Request</h4>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @Html.Hidden("UserId")

                    @Html.Hidden("LevelId")
                    @Html.Hidden("ITStaffId")
                    @Html.Hidden("DateCreated")
                    @Html.Hidden("UpdatedAt")
                    @Html.Hidden("DepartmentId")

                    <div class="form-group col-md-6" hidden>
                        <label asp-for="StatusId" class="control-label"></label>
                        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Device" class="control-label"></label>
                            <select asp-for="DeviceId" class="form-control" asp-items="ViewBag.DeviceId"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="IssueId" class="control-label"></label>
                            <select asp-for="IssueId" class="form-control" asp-items="ViewBag.IssueId"></select>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <textarea asp-for="Message" class="form-control" rows="6" cols="4"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-block btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="col-md-3">

        <a asp-action="Index">Back to List</a>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{

    <script>

     
       //var x =  $('#StatusId').val();
     var x = document.getElementById("StatusId").selectedIndex;
     var y = document.getElementById("StatusId").options; 


    if (y[x].text == "Resolved") {
        alert('You can not edit this request at this stage');
        $("#Subject").prop("readonly", true);
        $("#DeviceId").prop("readonly", true);
        $("#IssueId").prop("readonly", true);
        $("#Message").prop("readonly", true);

    }
   

    </script>

}
