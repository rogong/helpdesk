                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issue.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITStaff.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResolvedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
