@model IEnumerable<CallogApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="agile-tables">
        <div class="col-md-8">

        </div>

        <div class="col-md-4">
            @*<a asp-area="Identity" asp-page="/Account/Register"  class="btn btn-primary"><i class="fa fa-plus"></i>  New User</a>*@
        </div>
        <div class="w3l-table-info">
            <h2>User List</h2>

            @if (Model.Count() > 0)

            {
                <form method="post">
                    <table class="w3l-table-info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>
                               
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.Name)
                                </td>
                                <td>
                                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                    {
                                        <a class="btn btn-success text-white" asp-action="Lock" asp-route-id="@item.Id">
                                            <i class="fa fa-unlock text-white"></i>

                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger text-white" asp-action="UnLock" asp-route-id="@item.Id">
                                            <i class="fa fa-lock text-white"></i>

                                        </a>
                                    }

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </form>
            }
        </div>
    </div>
</div>

