@model CallogApp.Models.Request

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row mt-20">

    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h4 class="text-dark text-uppercase">Submit Request</h4>
        <div class="w3l-table-info polaroid">
            <div class="message">@ViewBag.Message</div>
            <div class="m-10">

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @Html.Hidden("UserId")
                    @Html.Hidden("LevelId")
                    @Html.Hidden("StatusId")
                    @Html.Hidden("ITStaffId")
                    @Html.Hidden("DepartmentId")
                    @Html.Hidden("DateCreated")
                    @Html.Hidden("UpdatedAt")
                    @Html.Hidden("isCancel")
                    @Html.Hidden("ReasonForHigh")


                    @if (@ViewBag.progressMessage != null)
                    {
                        <div class="alert alert-danger  alert-dismissible" role="alert">
                            @ViewBag.progressMessage
                        </div>

                    }

                    @if (@ViewBag.progressMessage2 != null)
                    {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.progressMessage2
                </div>

                    }

                    @if (@ViewBag.reasonMessage != null)
                    {

                        <div class="alert alert-danger  alert-dismissible" role="alert">
                            @ViewBag.reasonMessage
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>



                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DeviceId" class="control-label"></label>
                            <select asp-for="DeviceId" class="device form-control" asp-items="ViewBag.DeviceId"></select>



                            <input asp-for="OtherDevice" type="text" class="form-control" placeholder="Enter the device" id="other_device" />

                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Category</label>
                            <select asp-for="IssueId" class="category form-control" asp-items="ViewBag.IssueId"></select>


                            <input asp-for="OtherIssue" type="text" class="form-control" placeholder="Enter the category" id="other_category" />

                        </div>

                    </div>


                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <textarea asp-for="Message" class="form-control" rows="4" cols="4" id="mytextarea"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <p>Upload one or more files(Optional):</p>
                        <input type="file" name="file" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-block btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="col-md-3">

        <a asp-action="Index">Back to List</a>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{

    <script>
        $(document).ready(function () {
            $('#other_device').hide();
            $('#other_category').hide();
        });
        //Dislay error alert and fade it
        $(".alert-dismissible").fadeTo(4000, 500).slideUp(500, function () {
            $(".alert-dismissible").alert('close');
        });

        //check selctet changes
        $(function () {
            var selectedDevice;
            var selectedCategory;

            $("select.device").change(function () {
                selectedDevice = $(this).children("option:selected").val();
                //alert(selectedDevice)
                if (selectedDevice == '14') {
                    $('#other_device').show();
                }
                else {
                    $('#other_device').hide();
                }
            });

            $("select.category").change(function () {
                selectedCategory = $(this).children("option:selected").val();
                //alert(selectedCategory)
                if (selectedCategory == '10') {
                    $('#other_category').show();
                }
                else {
                    $('#other_category').hide();
                }
            });
        });

    </script>
    <script src="~/js/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#mytextarea'))
            .catch(error => {
                console.error(error);
            });
    </script>
}